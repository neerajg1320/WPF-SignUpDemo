<Window x:Class="SignupDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Height="645" 
        Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        FontSize="18"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Margin="20">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="1" Opacity="0.4" />
        </Grid.Effect>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.22*" />
        </Grid.ColumnDefinitions>
        
        <!-- Left Section -->
        <Border Background="#07bf96" 
                CornerRadius="10 0 0 10"
                ClipToBounds="True">
            <Border.Clip>
                <RectangleGeometry Rect="0,0,400,605"
                                   RadiusX="10"
                                   RadiusY="10"/>
            </Border.Clip>


            <Grid>
                <!-- Titles -->
                <StackPanel Margin="0 120 0 0"
                        VerticalAlignment="Top">
                    <TextBlock FontSize="46"
                           FontWeight="Light"
                           Text="Sign up" 
                           Foreground="#FFFFFF"
                           TextAlignment="Center"/>
                    <TextBlock FontSize="16"
                           FontWeight="Light"
                           Text="to use all features" 
                           Foreground="#D1F2EB"
                           TextAlignment="Center"
                           Margin="0 15 0 3"
                           />
                    <TextBlock FontSize="16"
                           FontWeight="Light"
                           Text="of the application" 
                           Foreground="#D1F2EB"
                           TextAlignment="Center"
                           />

                </StackPanel>

                <!-- Ellipses -->
                <Ellipse Width="500" 
                     Height="500"
                     VerticalAlignment="Bottom"
                     Fill="#5ECCB4"
                         Margin="50 0 0 -200"
                         Opacity="0.6"/>
                <Ellipse Width="300" 
                     Height="300"
                     VerticalAlignment="Bottom"
                     Fill="#5BCBB3"
                         Margin="-450 0 0 30"
                         Opacity="0.3"/>
                <Ellipse Width="400" 
                     Height="400"
                     VerticalAlignment="Bottom"
                     Fill="#5ECCB4"
                         Margin="-320 0 0 -120"
                         Opacity="0.3"/>
                <Ellipse Width="250" 
                     Height="250"
                     VerticalAlignment="Bottom"
                     Fill="#5BC9B2"
                         Margin="-380 0 0 -120"
                         />
                <Ellipse Width="400" 
                     Height="400"
                     VerticalAlignment="Bottom"
                     Fill="#5ECCB4"
                         Margin="280 0 0 -70"
                         Opacity="0.8"/>
                <Border Background="#FDFDFD"
                        CornerRadius="100"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Height="110"
                        Width="110"
                        Margin="0 0 0 80">
                    <Grid>
                        <!-- Colored Ellipses -->
                        <Ellipse Width="100"
                                 Height="100"
                                 StrokeThickness="4">
                            <Ellipse.Stroke>
                                <LinearGradientBrush>
                                    <GradientStop Color="#E27C53"
                                                  Offset="0.15"/>
                                    <GradientStop Color="#DCA530"
                                                  Offset="0.2"/>
                                    <GradientStop Color="#8BB356"
                                                  Offset="0.3"/>
                                    <GradientStop Color="#3BB799"
                                                  Offset="0.4"/>
                                    <GradientStop Color="#67CBEE"
                                                  Offset="0.5"/>
                                    <GradientStop Color="#3699DB"
                                                  Offset="0.6"/>
                                    <GradientStop Color="#9264AA"
                                                  Offset="0.8"/>
                                    <GradientStop Color="#6E94DE"
                                                  Offset="0.9"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>

                        <!-- Colored Tick Icon -->
                        <materialDesign:PackIcon Kind="Tick"
                                                 Width="70"
                                                 Height="70"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush StartPoint="0,1">
                                    <GradientStop Color="#E27C53"
                                                  Offset="0.1"/>
                                    <GradientStop Color="#DCA530"
                                                  Offset="0.3"/>
                                    <GradientStop Color="#8BB356"
                                                  Offset="0.5"/>
                                    <GradientStop Color="#3BB799"
                                                  Offset="0.7"/>
                                    <GradientStop Color="#67CBEE"
                                                  Offset="0.9"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>

                        </materialDesign:PackIcon>
                        <Ellipse Width="100"
                                 Height="100"
                                 StrokeThickness="4">
                            <Ellipse.Stroke>
                                <LinearGradientBrush>

                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                    </Grid>
                </Border>
                
               
            </Grid>
        </Border>
        
        <!-- Right Section -->
        <Border Grid.Column="1"
                        Background="#FFFFFF"
                        CornerRadius="0 10 10 0"
                        MouseDown="Border_MouseDown">
            <Grid>
                <!-- Close Icon -->
                <materialDesign:PackIcon Kind="Close"
                                                 VerticalAlignment="Top"
                                                 Width="20"
                                                 Height="20"
                                                 HorizontalAlignment="Right"
                                                 Opacity="0.3"
                                                 Margin="0 13 14 0"
                                                 />
                <!-- Inputs -->
                <StackPanel VerticalAlignment="Center"
                                    Margin="75 0">
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="John.Doe" 
                                     materialDesign:HintAssist.Hint="Username"
                                     materialDesign:HintAssist.FloatingOffset="0, -20"
                                     BorderBrush="#C5C8CC"
                                     BorderThickness="0 0 0 1.5"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="John.Doe@gmail.com" 
                                     materialDesign:HintAssist.Hint="Email"
                                     materialDesign:HintAssist.FloatingOffset="0, -20"
                                     BorderBrush="#C5C8CC"
                                     Margin="0 27"
                                     BorderThickness="0 0 0 1.5"/>
                    <PasswordBox Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     Password="12345678" 
                                     materialDesign:HintAssist.Hint="Password"
                                     materialDesign:HintAssist.FloatingOffset="0, -20"
                                     BorderBrush="#C5C8CC"
                                     BorderThickness="0 0 0 1.5"/>
                    <PasswordBox Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     Password="12345678" 
                                     materialDesign:HintAssist.Hint="Confirm Password"
                                     materialDesign:HintAssist.FloatingOffset="0, -20"
                                     BorderBrush="#C5C8CC"
                                     Margin="0 27"
                                     BorderThickness="0 0 0 1.5"/>
                    <CheckBox Margin="0 40 0 20" FontSize="13">
                        <TextBlock>
                                    <Run Foreground="#B6B6B6">By signing I agree with</Run>
                                    <Run Foreground="#07BF96">terms and conditions</Run>
                        </TextBlock>

                    </CheckBox>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Sign up"
                                        Background="#05B790"
                                        Foreground="#FFFFFF"
                                        FontSize="18"
                                        Width="120"
                                        Height="45"
                                        materialDesign:ButtonAssist.CornerRadius="22"/>
                        <Button Content="Login"
                                        FontSize="18"
                                        Width="120"
                                        Height="45"
                                        Margin="5 0 0 0"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        materialDesign:ButtonAssist.CornerRadius="22"/>
                    </StackPanel>
                </StackPanel>


            </Grid>


        </Border>

    </Grid>
</Window>
